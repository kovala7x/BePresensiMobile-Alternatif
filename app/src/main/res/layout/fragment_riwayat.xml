<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="@dimen/def_margin_top"
            android:layout_marginStart="@dimen/def_margin_left"
            android:layout_marginEnd="@dimen/def_margin_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_keterangan_riwayat"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTanggalRiwayat"
            android:layout_marginTop="@dimen/def_margin_near"
            android:layout_marginStart="@dimen/def_margin_left"
            android:layout_marginEnd="@dimen/def_margin_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_range"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRiwayat"
            android:layout_marginTop="@dimen/def_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_riwayat"
            />
    </LinearLayout>
</ScrollView>
